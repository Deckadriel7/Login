@model List<FindMyGym.Models.ViewModels.TablaComentario>
@{
    ViewBag.Title = "Información de Comentario";
}

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:right; padding:5px;">
    <a href="~/Comentario/Nuevo" class="btn btn-primary">Nuevo</a>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Nombre de Gimnasio</th>
                <th>Nombre de Cliente</th>
                <th>Título Comentario</th>
                <th>Descripción</th>
               

                <th></th>
            </tr>
            @foreach (var elemento in Model)
            {
                <tr>
                    <td>@elemento.ID_COMENTARIO</td>
                    <td>@elemento.nombreGimnasio</td>
                    <td>@elemento.nombreCliente</td>
                    <td>@elemento.TITULO_COMEN</td>
                    <td>@elemento.DESCRIPCION_COMEN</td>
           

                    <td>
                        <a class="btn btn-primary" href="~/Comentario/Editar/@elemento.ID_COMENTARIO">Editar</a>
                        <a class="btn btn-danger" href="~/Comentario/Eliminar/@elemento.ID_COMENTARIO">Eliminar</a>
                    </td>
                </tr>
            }
        </table>
    </div>

</div>

