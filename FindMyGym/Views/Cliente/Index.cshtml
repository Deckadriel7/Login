@model List<FindMyGym.Models.ViewModels.tablaViewModel1>
@{
    ViewBag.Title = "Información Cliente";
}

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:right; padding:5px;">
    <a href="~/Cliente/Nuevo" class="btn btn-primary">Nuevo</a>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>Cédula</th>
                <th>Correo</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Dirección</th>
                <th>Edad</th>
                <th>Teléfono</th>
                <th>Género</th>
                <th>Sector</th>
                <th></th>
            </tr>
            @foreach (var elemento in Model)
            {

                <tr>
                    <td>@elemento.CI_CLIENTE</td>
                    <td>@elemento.NOMBRE_USUARIO</td>
                    <td>@elemento.NOMBRE_CLI</td>
                    <td>@elemento.APELLIDO_CLI</td>
                    <td>@elemento.DIRECCION_CLI</td>
                    <td>@elemento.EDAD_CLI</td>
                    <td>@elemento.TELF_CLI</td>
                    <td>@elemento.GENERO_CLI</td>
                    <td>@elemento.SECTOR_CLI</td>
                    <td>
                        <a class="btn btn-primary" href="~/Cliente/Editar/@elemento.ID_CLIENTE">Editar</a>
                        <a class="btn btn-danger" href="~/Cliente/Eliminar/@elemento.ID_CLIENTE">Eliminar</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

